plugins {
    id 'java'
    id 'com.github.johnrengelman.shadow' version '8.1.1'
}

group = 'com.starflow.client'
version = 'v1.0-Dev'

java {
    sourceCompatibility = JavaVersion.VERSION_1_8
    targetCompatibility = JavaVersion.VERSION_1_8
}

project.ext.lwjglVersion = "3.3.6"
project.ext.lwjglNatives = "natives-windows"
project.ext.VERSION = "v1.0-Dev"
project.ext.LastChangeTime = "20251228"

repositories {
    maven { url = 'https://maven.aliyun.com/repository/public/' }
    maven { url = "https://mvnrepository.com/artifact" }
    maven { url = 'https://libraries.minecraft.net/' }
    maven { url = 'https://repo.marcloud.net/' }
    mavenCentral()
}

dependencies {
    implementation fileTree(dir: "libs", includes: ["*.jar"])
    implementation "org.lwjgl:lwjgl:$lwjglVersion"
    implementation "org.lwjgl:lwjgl-glfw:$lwjglVersion"
    implementation "org.lwjgl:lwjgl-openal:$lwjglVersion"
    implementation "org.lwjgl:lwjgl-opengl:$lwjglVersion"
    implementation "org.lwjgl:lwjgl-nfd:$lwjglVersion"
    implementation "org.lwjgl:lwjgl-stb:$lwjglVersion"
    runtimeOnly "org.lwjgl:lwjgl:$lwjglVersion:$lwjglNatives"
    runtimeOnly "org.lwjgl:lwjgl-glfw:$lwjglVersion:$lwjglNatives"
    runtimeOnly "org.lwjgl:lwjgl-openal:$lwjglVersion:$lwjglNatives"
    runtimeOnly "org.lwjgl:lwjgl-opengl:$lwjglVersion:$lwjglNatives"
    runtimeOnly "org.lwjgl:lwjgl-nfd:$lwjglVersion:$lwjglNatives"
    runtimeOnly "org.lwjgl:lwjgl-stb:$lwjglVersion:$lwjglNatives"
    // implementation "com.mojang.netty:1.7.7"
    implementation "com.github.oshi:oshi-core:4.7.1"
    implementation "net.java.dev.jna:jna:5.8.0"
    implementation "net.java.dev.jna:jna-platform:5.8.0"
    implementation "com.mojang:icu4j-core-mojang:51.2"
    implementation "net.sf.jopt-simple:jopt-simple:5.0.4"
    implementation "io.netty:netty-all:4.2.9.Final"
    implementation "com.google.guava:guava:33.5.0-jre"
    implementation "org.apache.commons:commons-lang3:3.20.0"
    implementation "commons-io:commons-io:2.21.0"
    implementation "commons-codec:commons-codec:1.20.0"
    implementation "net.java.jinput:jinput-platform:2.0.5"
    implementation "org.apache.logging.log4j:log4j-api:2.25.3"
    implementation "org.apache.logging.log4j:log4j-core:2.25.3"
    implementation 'org.apache.commons:commons-compress:1.27.1'
    implementation "org.apache.httpcomponents:httpclient:4.5.14"
    implementation "org.apache.httpcomponents:httpcore:4.4.16"
    implementation "net.java.jinput:jinput:2.0.5"
    implementation "net.java.jutils:jutils:1.0.0"
    implementation "com.google.code.gson:gson:2.13.2"
    implementation "com.mojang:authlib:1.5.21"
    // implementation "com.mojang:realms:1.7.59"
    implementation "tv.twitch:twitch:6.5"

    // 用LWJGL3 OpenGL 控制
    // com.paulscode:codecjorbis:20101023
    // com.paulscode:codecwav:20101023
    // com.paulscode:libraryjavasound:20101123
    // com.paulscode:librarylwjglopenal:20100824
    // com.paulscode:soundsystem:20120107

    // 源 json 中没有的依赖
    implementation "com.mojang:patchy:1.7.7"

}

shadowJar {
    archiveFileName = "StarFlow-[$VERSION]-[$LastChangeTime].jar"
    mergeServiceFiles()
    manifest {
        attributes(
                'Main-Class': 'net.minecraft.client.main.Main'
        )
    }
}

tasks.register('runClient', JavaExec) {
    group = "application"
    description = "Run the Client"
    classpath = sourceSets.main.runtimeClasspath
    mainClass = "Start"
    workingDir = file("run")
    args = ['--username', 'Developer']
}